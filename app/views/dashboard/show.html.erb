<div class="container">
  <% @accounts.each do |account|%>
    <div class="box">
      <div class="content">
        <div data-controller="load-modal" data-load-modal-url="<%= new_modal_expense_path(account_id: account.id)%>">
          <span class="icon is-pulled-right has-text-info">
            <a class="tooltip"
              data-tooltip="List expenses of the <%= account.name%> account"
              href="<%= account_expenses_path(account) %>">
              <i class="fas fa-list-ol fa-lg"></i>
            </a>
          </span>
          <span class="icon is-pulled-right has-text-success">
            <a class="tooltip" data-action="load-modal#open"
              data-tooltip="Add new expense to the <%= account.name%> account">
              <i class="far fa-plus-square fa-lg"></i>
            </a>
          </span>
        </div>
        <p>
          <strong><%= link_to account.name, account_expenses_path(account) %></strong> <small><%= account.description %></small>
        </p>
        <p>
          <small>spent <%= account.this_month_expenses %> of your <i>favourite</i> currency</small>
        </p>
      </div>
    </div>
  <% end %>
</div>
